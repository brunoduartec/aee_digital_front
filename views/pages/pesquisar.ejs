<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="body">
    <header><%- include('../partials/header'); %></header>

    <main class="flex-shrink-0">
      <div class="container-fluid">
        <div class="tela-pesquisar">
          <div class="titulo-pesquisar">
            <h>O que você procura?</h>
          </div>
          <div class="opcoes-pesquisar">
            <form action="/pesquisa" method="post">
              <div>
                <label for="sel1">Regional</label><br />
                <select id="regional" name="regional">
                  <option>Todos</option>
                  <% regionais.forEach(function(regional) { %>
                  <option>
                    <% if(regional.PAIS!="Brasil"){ %> <%= regional.PAIS %>
                    <%}else{%> <%= regional.NOME_REGIONAL %> <%}%>
                  </option>

                  <% }); %>
                </select>
              </div>
              <div>
                <label for="sel1">Trabalho do Centro Espírita</label><br />
                <select id="trabalho" name="trabalho">
                  <option>Todos</option>
                  <% atividades.forEach(function(atividade) { %>
                  <option><%= atividade.NOME_ATIVIDADE %></option>
                  <% }); %>
                </select>
              </div>
              <div class="botao-pesquisar">
                <br />
                <button type="submit" class="btn btn-primary btn-lg">
                  Pesquisar <i class="bi bi-search"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer'); %>
  </body>
</html>
